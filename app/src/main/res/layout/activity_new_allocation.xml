<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/discordGray"
    tools:context=".NewAllocationActivity">


    <Button
        android:id="@+id/btEnviar"
        android:layout_width="222dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/discordPurple"
        android:text="Enviar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="0.155" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="253dp"
        android:layout_height="16dp"
        android:layout_marginBottom="8dp"
        android:text="Selecione o dia da semana"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/spinner3"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="253dp"
        android:layout_height="16dp"
        android:layout_marginBottom="40dp"
        android:text="Selecione o professor"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/progressBarNewProfessors"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:spinnerMode="dialog"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        tools:layout_editor_absoluteX="1dp" />


    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_atop"
        android:spinnerMode="dialog"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="253dp"
        android:layout_height="16dp"
        android:layout_marginBottom="20dp"
        android:text="Selecione o curso"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/spinner2"
        tools:layout_editor_absoluteX="1dp" />

    <ProgressBar
        android:id="@+id/progressBarNewProfessors"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleProfessorsForm"
        app:layout_constraintVertical_bias="0.767" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:spinnerMode="dialog"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TimePicker
        android:id="@+id/datePicker1"
        android:layout_width="261dp"
        android:layout_height="96dp"
        android:alwaysDrawnWithCache="true"
        android:amPmBackgroundColor="#FF0000"
        android:amPmTextColor="#9C27B0"
        android:backgroundTint="@color/white"
        android:numbersBackgroundColor="@color/white"
        android:numbersInnerTextColor="#A30000"
        android:numbersTextColor="@color/white"
        android:timePickerMode="spinner"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/datePicker2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538" />

    <TimePicker
        android:id="@+id/datePicker2"
        android:layout_width="261dp"
        android:layout_height="96dp"
        android:alwaysDrawnWithCache="true"
        android:amPmBackgroundColor="#FF0000"
        android:amPmTextColor="#9C27B0"
        android:backgroundTint="@color/white"
        android:numbersBackgroundColor="@color/white"
        android:numbersInnerTextColor="#A30000"
        android:numbersTextColor="@color/white"
        android:timePickerMode="spinner"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794" />

    <TextView
        android:id="@+id/titleProfessorsForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>